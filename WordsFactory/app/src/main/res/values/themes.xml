<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WordsFactory" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splashscreen</item>
    </style>

    <style name="CustomTextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:fontFamily">@font/rubik</item>
        <item name="textAllCaps">false</item>
        <item name="android:lineHeight">16dp</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:gravity">top</item>
        <item name="android:layout_width">45dp</item>
    </style>

    <style name="CustomTextButtonRight" parent="CustomTextButton">
        <item name="android:textAlignment">textEnd</item>
    </style>

    <style name="CustomButton" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/button_color</item>
        <item name="android:fontFamily">@font/rubik</item>
        <item name="android:lineHeight">18dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingVertical">16dp</item>
        <item name="android:paddingHorizontal">32sp</item>
    </style>

    <style name="CustomTabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicator">@null</item>
        <item name="android:layout_height">6dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabGravity">center</item>
        <item name="tabBackground">@drawable/selector_tab</item>
    </style>

    <style name="CustomTextAppearance" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/rubik</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundMode">outline</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="hintEnabled">false</item>
        <item name="hintTextColor">@color/dark_grey</item>
        <item name="colorAccent">@color/button_color</item>
    </style>

    <style name="CustomPassword" parent="CustomTextInputLayout">
        <item name="passwordToggleEnabled">true</item>
        <item name="passwordToggleDrawable">@drawable/password_input_toggle</item>
    </style>

    <style name="CustomFloatingActionButton" parent="android:Widget">
        <item name="android:backgroundTint">@android:color/white</item>
        <item name="backgroundTint">@color/grey</item>
        <item name="borderWidth">1.5dp</item>
        <item name="tint">@color/dark</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="CustomTextView" parent="Widget.MaterialComponents.TextView">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="colorOnBackground">@color/button_color</item>
        <item name="background">@null</item>
    </style>

    <style name="BaseCustomParagraph" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/rubik</item>
        <item name="android:textColor">@color/dark</item>
    </style>

    <style name="CustomParagraph" parent="BaseCustomParagraph">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CustomParagraph2" parent="BaseCustomParagraph">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="CustomTabLayout2" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicator">@null</item>
        <item name="android:background">@drawable/tab_background</item>
        <item name="tabTextAppearance">@style/CustomParagraph</item>
        <item name="tabSelectedTextColor">@color/button_color</item>
        <item name="tabTextColor">@color/grey</item>
        <item name="tabIconTint">@drawable/color_selector</item>
    </style>

</resources>